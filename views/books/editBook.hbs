<form class="form" method="post" action="/books/{{book.id}}?_method=PUT">
<div class="form-group">
	<label for="title">Title</label><br>
	<input type="text" name="title" id="title" placeholder="Book Title"value="{{book.title}}"required>
</div>
<div class="form-group">
	<label for="genre">Genre</label><br>
	<input type="text" name="genre" id="genre" placeholder="Book Genre"value="{{book.genre}}"required>
</div>
<div class="form-group">
	<label for="cover">Cover Image URL</label><br>
	<input type="text" name="cover" id="cover" placeholder="Cover Image URL"value="{{book.cover_url}}"required>
</div>
<div class="form-group">
	<label for="description">Description</label><br>
	<textarea name="description" id='description' rows="8" cols="80" placeholder="Book description goes here">{{book.description}}</textarea>
</div>
				<button type="submit" class="btn btn-primary">Edit {{book.title}}</button>
</form>
