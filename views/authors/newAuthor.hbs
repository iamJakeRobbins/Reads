<form class="form" action="/authors" method="post">
	<div class="form-group">
		<label for="first_name">First Name</label><br>
		<input type="text" name="first_name" id="first_name" placeholder="Add Author's First Name"value=""required>
	</div>
	<div class="form-group">
		<label for="last_name">Last Name</label><br>
		<input type="text" name="last_name" id="last_name" placeholder="Add Author's Last Name"value=""required>
	</div>
	<div class="form-group">
		<label for="portrait_url">Portrait URL</label><br>
		<input type="text" name="portrait_url" id="portrait_url" placeholder="Portrait URL"value=""required>
	</div>
	<div class="form-group">
		<label for="biography">Bio</label><br>
		<textarea name="biography" id='biography' rows="8" cols="80" 	placeholder="Author Bio goes here"></textarea>
	</div>
	<button type="submit" class="btn btn-primary">Add a New Author!</button>
</form>
